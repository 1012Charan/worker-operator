{
  "apiVersion": "networking.istio.io/v1alpha3",
  "kind": "Gateway",
  "metadata": {
    "name": "SLICE-istio-egressgateway",
    "namespace": "kubeslice-system"
  },
  "spec": {
    "selector": {
      "istio": "egressgateway",
      "slice": "SLICE"
    },
    "servers": [
      {
        "port": {
          "number": 80,
          "name": "http",
          "protocol": "HTTP"
        },
        "hosts": [
          "*"
        ]
      }
    ]
  }
}
